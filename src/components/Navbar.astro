<!-- Main Content -->
<style>
    nav {
        width: 100%;
        height: 60px;
        background-color: #fff;
        /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); */
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
    }
    #nav-warpper {
        width: calc(100% - 2rem);
        height: 100%;
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    #nav-logo {
        flex-grow: 1;
    }
    #nav-menu {
        flex-grow: 1;
    }
    .menu {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.4rem;
    }
    .menu li {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .menu li .button {
        text-decoration: none;
        color: #000;
        font-size: 1.1rem;
        font-weight: 400;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        cursor: pointer;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background-color: transparent;
    }
    .menu li .button:hover {
        color: var(--color-primary);
        background-color: rgb(180 180 180 / 0.2);
    }
    .menu li .drop-down-menu {
        position: absolute;
        top: calc(100% + 1rem);
        width: max-content;
        background-color: #fff;
        border: solid thin rgba(0, 0, 0, 0.1);
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 2rem;
        z-index: 100;
    }
    #nav-actions {
        flex-grow: 1;
    }
    .actions {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
    }
    .actions li {
        margin: 0;
        padding: 0;
    }
    .actions li a {
        text-decoration: none;
        color: #000;
        font-size: 1.1rem;
        font-weight: 400;
        opacity: 0.75;
        transition: all 0.3s ease;
    }
    .actions li a:hover {
        opacity: 0.9;
        color: var(--color-primary);
    }
</style>